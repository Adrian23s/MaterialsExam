@model MaterialsJAMCH.Models.Customers

@{
    ViewBag.Title = "Create Customer";
    //We call the list created with data set from the controller with the viewbag
    List<SelectListItem> listBLD = (List<SelectListItem>)ViewBag.List;

}

<h3>Create Customer</h3>

<div>
    @*Create a Form with method post to send info of the view to controller. Here the user type the info*@
    <form method="post">
        <div class="form-group mb-3">
            <label class="form-label text-primary">Customer Name</label>
            <input type="text" name="Customer" class="form-control" placeholder="Type the name of the Customer">
        </div>
        <div class="form-group mb-3">
            <label class="form-label text-primary">Prefix</label>
            <input type="text" name="Prefix" class="form-control" placeholder="Type the prefix of the Customer">
        </div>

        <div class="form-group mb-3">
            <label class="form-label text-primary">Building</label>
            
            @*We create a combobox to show the buildings so that the user can select it*@
            @Html.DropDownList("PKBuilding", listBLD, null, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Create&nbsp;&nbsp;<span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
    </form>
</div>
@*Add a message to alert that record was created*@
@{
    if (TempData["msg"] != null)
    {
        <script>alert('@TempData["msg"]')</script>
    }
}
