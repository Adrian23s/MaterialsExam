@model MaterialsJAMCH.Models.PartNumbers

@{        
    ViewBag.Title = "Create PartNumber";
    //We call the list created with data set from the controller with the viewbag
    List<SelectListItem> listCUS = (List<SelectListItem>)ViewBag.List;
}

<h3>Create PartNumber</h3>

<div>
    @*Create a Form with method post to send info of the view to controller. Here the user type the info*@
    <form method="post">
        <div class="form-group mb-3">
            <label class="form-label text-primary">PartNumber</label>
            <input type="text" name="PartNumber" class="form-control" placeholder="Type the PartNumber">
        </div>
        <div class="form-group mb-3">
            <label class="form-label text-primary">Customer</label>
            @*We create a combobox to show the customers so that the user can select it*@
            @Html.DropDownList("PKCustomer", listCUS, null, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Create&nbsp;&nbsp;<span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
    </form>
</div>
@*Add a message to alert that record was created*@
@{
    if (TempData["msg"] != null)
    {
        <script>alert('@TempData["msg"]')</script>
    }
}

